---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Jake Cupani";
const description = "Jake Cupani's personal website.";
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-copy">
      <h1>Hi, my name is Jake Cupani! ðŸ˜Š</h1>
      <p>
        I'm passionate about creating <span class="emp-text"
          >interactive dashboards</span
        > and <span class="emp-text">data visualizations</span>.
      </p>
      <button class="button"
        ><a href="Jake Cupani Resume.pdf">Resume</a>
      </button>
    </div>

    <div class="hero-image-container">
      <picture>
        <source srcset="/assets/me.png" media="(min-width: 600px)" />
        <img
          class="hero-image"
          alt="Profile picture"
          src="/assets/me.png"
          width="200"
          height="200"
        />
      </picture>
    </div>
  </div>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;

    transition: 0.5s;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: 0.8em;
    font-style: italic;
    text-align: left;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
