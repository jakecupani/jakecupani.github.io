  <div class="social-labels">
          <p id="githublabel" class="social-label">GitHub</p>
          <p id="linkedinlabel" class="">LinkedIn</p>
          
      </div>
      
    </div>

    <div class="hero-image-container">
      <picture>
        <source srcset="/assets/profile.png" media="(min-width: 600px)" />
        <img
          class="hero-image"
          alt="Profile picture"
          src="/assets/me.png"
          width="200"
          height="200"
        />
      </picture>
    </div>
  </div>


</BaseLayout>
<script>
    // Select the image and label elements
    const githubImage = document.getElementById('github');
    const githubLabel = document.getElementById('githublabel');

    // Add event listeners for hover effects
    githubImage.addEventListener('mouseenter', () => {
      githubLabel.style.opacity = '1'; // Show the label
    });

    githubImage.addEventListener('mouseleave', () => {
      githubLabel.style.opacity = '0'; // Hide the label
    });
  </script>
<script>
    // Select the image and label elements
    const linkedinImage = document.getElementById('linkedin');
    const linkedinLabel = document.getElementById('linkedinlabel');

    // Add event listeners for hover effects
    linkedinImage.addEventListener('mouseenter', () => {
      linkedinLabel.style.opacity = '1'; // Show the label
    });

    linkedinImage.addEventListener('mouseleave', () => {
      linkedinLabel.style.opacity = '0'; // Hide the label
      linkedinLabel.style.transition = '0.2s';
    });
  </script>
<style>
.social-labels {
  display: flex;
  color: currentcolor;
}

.social-labels p {
    font-size: 12pt;
}

#githublabel {
  opacity: 0;
  transition: 0.2s;
}

#linkedinlabel {
  opacity: 0;
  transition: 0.2s;
}

  .home-copy button {
    margin-right: 20px;
    margin-bottom: 20px;
  }

  #substack {
    border-radius: 10px;
  }

  #portfolioBtn {
    background-image: linear-gradient(135deg, #6661ff 0%, #da5cca 100%);;
  }

  .home-copy button:hover {
    filter: drop-shadow(1px 2px 2px grey);
    transition: 0.5s;
  }

  .socials img {
    margin-right: 30px;
    margin-top: 35px;
    transition: 0.5s;
  }

  .socials img:nth-child(n+2):hover {
    transform: rotate(5deg);
    transition: 0.5s;
  }

  .socials img:nth-last-child(-n+2):hover {
    transform: rotate(5deg);
    transition: 0.5s;
  }

  img#threads {
    background-color: white;
    width: 80px;
    padding: 5px;
    border-radius: 10px;
  }

  /* .socials img:hover {
    margin-bottom: -2px;
    transition: 0.2s;
} */

  #medium {
    border-radius: 20px;
  }

  .socials img:hover {
    /* border-bottom: 1px #fffa dashed; */
    /* border-bottom: 1pt solid blue; */
    transition: 0.5s;
  }

  #linkedin {
    border-radius: 10px;
  }

  #github {
    background-color: white;
    /* padding: 1px; */
    border-radius: 10px;
  }

  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    padding-bottom: 150px;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;

    transition: 0.5s;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: 0.8em;
    font-style: italic;
    text-align: left;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
