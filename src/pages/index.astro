---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Jake Cupani";
const description = "Jake Cupani's personal website.";
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-copy">
      <h1>Hi, my name is Jake Cupani! ðŸ˜Š</h1>
      <p>I'm passionate about <span class="emp-text">UI/UX Design</span> and creating <span class="emp-text">Data Visualizations</span>.
      </p>
      <button class="button"
        ><a target='_blank' href="Jake Cupani Resume.pdf">Resume</a>
      </button>

      <button id="portfolioBtn" class="button"
        ><a target='_blank' href="https://bento.com/jakecupani">UX Portfolio</a>
      </button>
      
      <div class="socials">
       
        <a target='_blank' href="https://github.com/jakecupani"><img id="github" src="/assets/socials/github.png" alt="Github Logo" height="50px" width="50px"></a>
        <a target='_blank' href="https://linkedin.com/in/jakecupani"><img id="linkedin" src="/assets/socials/linkedin.webp" alt="LinkedIn Logo" height="50px" width="50px"></a>

        <a target='_blank' href="https://www.threads.net/@jake.cupani"><img id="threads" src="https://1000logos.net/wp-content/uploads/2023/07/Threads-Logo.png" alt="Threads Logo" height="50px" width="50px"></a>
        <!-- <a target='_blank' href="https://apps.apple.com/us/developer/jake-cupani/id1730791358"><img id="appstore" src="/assets/socials/appstore.png" alt="Apple App Store Logo" height="50px" width="50px"></a>  -->
        <!-- <a target='_blank' href="https://dev.to/jakecupani"><img id="dev" src="/assets/socials/dev.png" alt="Dev Logo" height="40px" width="60px"></a> -->
        <!-- <a target='_blank' href="https://medium.com/@jcupani"><img id="medium" src="/assets/socials/medium-logo.png" alt="Medium Logo" height="150px" width="200px"></a> -->
         
        
      </div>
      
      
    </div>

    <div class="hero-image-container">
      <picture>
        <source srcset="/assets/profile.png" media="(min-width: 600px)" />
        <img
          class="hero-image"
          alt="Profile picture"
          src="/assets/me.png"
          width="200"
          height="200"
        />
      </picture>
    </div>
  </div>

  <script src='https://storage.ko-fi.com/cdn/scripts/overlay-widget.js'></script>
<script>
  kofiWidgetOverlay.draw('jakecupani', {
    'type': 'floating-chat',
    'floating-chat.donateButton.text': 'Support me',
    'floating-chat.donateButton.background-color': '#00b9fe',
    'floating-chat.donateButton.text-color': '#fff'
  });
</script>
</BaseLayout>

<style>
  #portfolioBtn {
    background-image: linear-gradient(135deg,#007dd7 0%,#6661ff 100%);
  }

  .socials img {
    margin-right: 20px;
    margin-top: 35px;
    transition: 0.5s;
  }

  img#threads {
    background-color: white;
    width: 80px;
    padding: 5px;
    border-radius: 10px;
  }

  /* .socials img:hover {
    margin-bottom: -2px;
    transition: 0.2s;
} */

  #medium {
    border-radius: 20px;
  }

  .socials img:hover {
    /* border-bottom: 1px #fffa dashed; */
    /* border-bottom: 1pt solid blue; */
    transition: 0.5s;
  }

  #linkedin {
    border-radius: 10px;
  }

  #github {
    background-color: white;
    /* padding: 1px; */
    border-radius: 10px;
  }

  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    padding-bottom: 150px;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;

    transition: 0.5s;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: 0.8em;
    font-style: italic;
    text-align: left;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
